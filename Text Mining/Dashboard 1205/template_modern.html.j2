<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ report_title }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Source+Code+Pro:wght@400;500&family=PT+Sans+Narrow:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/vis-network/standalone/umd/vis-network.min.js" onerror="console.error('Failed to load vis-network from CDN')"></script>
    <script>
        // Check if vis.js loaded and provide fallback
        window.addEventListener('load', function() {
            if (typeof vis === 'undefined') {
                console.error('vis.js failed to load from CDN, trying alternative CDN...');
                const script = document.createElement('script');
                script.src = 'https://cdnjs.cloudflare.com/ajax/libs/vis-network/9.1.2/standalone/umd/vis-network.min.js';
                script.onload = function() {
                    console.log('vis.js loaded from alternative CDN');
                };
                script.onerror = function() {
                    console.error('vis.js failed to load from alternative CDN too');
                };
                document.head.appendChild(script);
            } else {
                console.log('vis.js loaded successfully from primary CDN');
            }
        });
    </script>
    <style>
        :root {
            /* 1. Design Tokens: Color Palette */
            --bg-primary: #FFFFFF;
            --bg-secondary: #F7F7F8;
            --fg-primary: #1D2029;
            --fg-secondary: #5F6368;
            --fg-on-accent: #FFFFFF;
            --accent: #4d78aaff;
            --accent-secondary: #035c5cbe;
            /* For less frequent entities */
            --accent-tertiary: #23231f80;
            /* For rare entities */
            --border-primary: #EAEBEB;
            --border-secondary: #CBD6E4;
            --accent-bg-subtle: #EEF2FF;
            --shadow-color-rgb: 95, 99, 104;
            --app-bar-height: 68px; /* Approximate height for calculations */

            /* 2. Design Tokens: Typography */
            --font-primary: 'Inter', sans-serif;
            --font-mono: 'Source Code Pro', monospace;
            --fs-xs: 0.8rem;
            --fs-sm: 0.9rem;
            --fs-base: 1rem;
            --fs-md: 1.1rem;
            --fs-lg: 1.25rem;
            --fs-xl: 1.5rem;
            --fs-display: 2.25rem;

            /* 3. Design Tokens: Spacing & Sizing */
            --sp-1: 0.25rem;
            /* 4px */
            --sp-2: 0.5rem;
            /* 8px */
            --sp-3: 0.75rem;
            /* 12px */
            --sp-4: 1rem;
            /* 16px */
            --sp-5: 1.25rem;
            /* 20px */
            --sp-6: 1.5rem;
            /* 24px */
            --sp-8: 2rem;
            /* 32px */
            --sp-12: 3rem;
            /* 48px */

            /* 4. Design Tokens: Borders & Shadows (NEW RADIUS SCALE) */
            --radius-main: 12px;
            /* Main containers/cards */
            --radius-interactive: 10px;
            /* Form controls/buttons */
            --radius-inline: 6px;
            /* Inline tags/code blocks */
            --radius-swatch: 3px;
            /* Legend color swatches */
            --radius-pill: 999px;
            /* Capsule/chip shapes */
            --shadow-sm: 0 1px 2px rgba(var(--shadow-color-rgb), 0.05);
            --shadow-md: 0 4px 6px rgba(var(--shadow-color-rgb), 0.06), 0 1px 3px rgba(var(--shadow-color-rgb), 0.08);
            --shadow-focus-ring: 0 0 0 3px var(--accent-bg-subtle);

            /* 5. Network Visualization Theme Variables */
            --net-bg: #FDFCF9;
            --net-node-label: var(--fg-primary);
            --net-edge: #C5C5C580;
            --net-edge-label: var(--fg-secondary);
            --net-highlight: #FFE066;
            --net-selected: var(--accent);
            --net-shadow: rgba(var(--shadow-color-rgb), 0.15);
            --net-cluster-1: #E69F00;
            --net-cluster-2: #56B4E9;
            --net-cluster-3: #009E73;
            --net-cluster-4: #F0E442;
            --net-cluster-5: #0072B2;
            --net-cluster-6: #D55E00;
            --net-cluster-7: #CC79A7;
            --net-cluster-8: #999999;
        }
        html {
             scroll-behavior: smooth;
        }
        body {
            font-family: var(--font-primary);
            background-color: var(--bg-primary);
            color: var(--fg-primary);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            margin: 0;
        }
        .app-bar {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: saturate(180%) blur(8px);
            -webkit-backdrop-filter: saturate(180%) blur(8px);
            border-bottom: 1px solid var(--border-primary);
            padding: var(--sp-3) var(--sp-8);
            width: 100%;
            box-sizing: border-box;
            min-height: var(--app-bar-height);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--sp-2);
        }
        .app-bar-content {
            width: min(calc(100% - 160px), 160rem);
            /* Align with new container width */
            margin: 0 auto;
            display: flex;
            align-items: center;
            gap: var(--sp-4);
        }
        .app-bar-content > * {
            flex-shrink: 0;
        }
        .app-bar-content > .text-search-input {
            flex: 1;
        }
        .app-bar-title {
            font-size: var(--fs-lg);
            font-weight: 600;
            margin: 0;
            flex-shrink: 0;
        }
        .app-bar .text-search-input {
            flex: 1;
            max-width: 350px;
            margin-bottom: 0;
            background-color: var(--bg-secondary);
        }
        .app-bar-filters {
            width: min(calc(100% - 160px), 160rem);
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        /* Inline filter status presentation inside app bar */
        #filter-status.filter-status-inline { width: 100%; display: none; margin: 0; }
        #filter-status.filter-status-inline > div { display: flex; align-items: flex-start; justify-content: space-between; gap: var(--sp-4); width: 100%; }
        #filter-status.filter-status-inline #filter-status-content { display: flex; flex-wrap: wrap; gap: var(--sp-4); }
        #filter-status.filter-status-inline h4 { font-size: var(--fs-xs); color: var(--fg-secondary); margin: 0; }
        #filter-status.filter-status-inline code { font-family: var(--font-mono); }
        #filter-status.filter-status-inline #type-filter-tags { display: flex; flex-wrap: wrap; gap: var(--sp-2); }
        #filter-status.filter-status-inline #relation-filter-tags { display: inline-flex; align-items: center; gap: var(--sp-2); }
        #filter-status.filter-status-inline #clear-all-filters-btn { margin-left: auto; }
        #visualise-btn {
            background-color: #4D4E54;
            color: #F9F9F7;
            border: none;
            border-radius: var(--radius-interactive);
            padding: var(--sp-2) var(--sp-4);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: var(--sp-2);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-weight: 600;
            font-size: var(--fs-sm);
            white-space: nowrap;
            box-shadow: var(--shadow-md);
            flex-shrink: 0;
        }
        #visualise-btn:hover {
            background-color: #5D5E64;
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 4px 12px rgba(77, 78, 84, 0.3);
        }
        
        /* Icon rotation effect */
        #visualise-btn svg {
            transition: transform 0.3s ease;
        }
        #visualise-btn:hover svg {
            transform: rotate(5deg);
        }
        #back-to-top-btn {
            position: fixed;
            top: 12px;
            right: 20px;
            z-index: 1001;
            background-color: #4D4E54;
            color: #F9F9F7;
            border: none;
            border-radius: var(--radius-interactive);
            padding: var(--sp-2) var(--sp-4);
            cursor: pointer;
            display: none;
            /* JS toggles this */
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
            flex-shrink: 0;
            font-weight: 600;
            font-size: var(--fs-sm);
            white-space: nowrap;
            box-shadow: var(--shadow-md);
        }
        #back-to-top-btn:hover {
            filter: brightness(1.1);
            transform: translateY(-1px);
        }

        .container {
            width: min(calc(100% - 160px), 160rem);
            /* 80px side gutters */
            margin: 0 auto;
            padding: var(--sp-8) 0;
        }

        h2 {
            font-size: var(--fs-lg);
            font-weight: 700;
            margin-top: 0;
            margin-bottom: var(--sp-4);
        }
        h3 {
            font-size: var(--fs-md);
            font-weight: 600;
            margin-top: 0;
            margin-bottom: var(--sp-4);
        }
        h4 {
            font-size: var(--fs-base);
            font-weight: 600;
            margin: var(--sp-6) 0 var(--sp-4) 0;
            padding-bottom: var(--sp-3);
            border-bottom: 1px solid var(--border-primary);
        }
        /* ▼▼▼ UPDATED GLOBAL SUMMARY STYLES ▼▼▼ */
        .global-summary-card {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: var(--sp-6);
            margin-bottom: var(--sp-8);
        }
        .global-summary-card .stat-item {
            text-align: center;
            background-color: transparent;
            padding: var(--sp-4) var(--sp-5);
            border-radius: var(--radius-main);
            border: 1px solid var(--border-primary);
            transition: border-color 0.2s ease;
        }
        .global-summary-card .stat-item:hover {
            border-color: var(--border-secondary);
        }
        .stat-item .value {
            font-size: 1.75rem; /* 28px */
            font-weight: 600;
            line-height: 1.2;
            color: #3A3B3F;
            letter-spacing: -0.02em;
        }
        .stat-item .label {
            font-size: 0.7rem; /* 11px */
            font-weight: 500;
            color: var(--fg-secondary);
            letter-spacing: 0.5px;
            text-transform: uppercase;
            margin-top: var(--sp-1);
        }
        /* ▲▲▲ END GLOBAL SUMMARY STYLES ▲▲▲ */
        .sidebar-panel, .summary-section {
            background-color: var(--bg-secondary);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-main);
            padding: var(--sp-5) var(--sp-6);
            margin-bottom: var(--sp-6);
        }
        #analytics-panel {
             background-color: transparent;
             border: none;
             padding: 0;
        }
        .text-search-input {
            width: 100%;
            padding: var(--sp-2) var(--sp-3);
            font-size: var(--fs-base);
            border-radius: var(--radius-interactive);
            border: 1px solid var(--border-secondary);
            font-family: var(--font-primary);
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }
        #filter-and-search-panel .text-search-input {
             margin-bottom: var(--sp-6);
        }
        .text-search-input:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: var(--shadow-focus-ring);
        }
        #filter-status-content h4 {
            font-size: var(--fs-sm);
            margin: 0 0 var(--sp-2) 0;
            padding: 0;
            border: none;
        }
        .stats-list { padding-left: 0;
 margin: 0; list-style: none; font-size: var(--fs-sm); max-height: 250px; overflow-y: auto;
 }
        .stats-list li { display: flex; justify-content: space-between; padding: var(--sp-2) var(--sp-2); border-radius: var(--radius-inline);
 margin-bottom: var(--sp-1); align-items: center; }
        .stats-list li:nth-child(odd) { background-color: var(--bg-primary);
 }
        .stats-list code, .stats-list .code { font-family: var(--font-mono); background: var(--border-primary); color: var(--fg-primary);
 padding: 2px 6px; border-radius: var(--radius-inline); font-size: var(--fs-xs); }
        .stats-list .pattern-rel { color: var(--accent);
 font-weight: 500; }
        .empty-state { color: var(--fg-secondary); font-style: italic; font-size: var(--fs-sm);
 }
        
        .two-column-layout { 
            display: flex;
 align-items: flex-start; 
            gap: var(--sp-8);
        }
        .main-content-column {
            flex: 4;
            /* 4:3 Ratio */
            min-width: 0;
        }
        .sidebar-column { 
            flex: 3;
            /* 4:3 Ratio */
            min-width: 320px;
            /* Prevent sidebar from becoming too narrow */
            position: sticky;
 top: calc(var(--app-bar-height) + var(--sp-4));
            max-height: calc(100vh - var(--app-bar-height) - var(--sp-8));
            overflow-y: auto;
        }
        @media (max-width: 1024px) { 
            .container {
                width: min(100% - 2rem, 160rem);
            }
            .fixed-buttons-container {
                right: 1rem;
            }
            .two-column-layout { 
                flex-direction: column;
            }
            .sidebar-column {
                width: 100%;
 position: static;
                max-height: none;
                order: -1;
                min-width: 0;
             }
            .app-bar { 
                padding: var(--sp-3) var(--sp-4);
            }
            .app-bar-content {
                width: 100%;
            }
        }

        .hidden-by-filter { display: none !important;
 }
        #filter-status { display: none; margin-bottom: var(--sp-6);
 }
        #filter-status-content > div:not(:last-child) { margin-bottom: var(--sp-4);
 }
        #clear-all-filters-btn { 
            font-weight: 600; 
            color: #F9F9F7;
            background: #4D4E54;
            border: 1px solid #4D4E54;
            border-radius: var(--radius-interactive); 
            padding: var(--sp-2) var(--sp-4); 
            cursor: pointer; 
            font-size: var(--fs-sm); 
            transition: all 0.2s ease;
        }
        #clear-all-filters-btn:hover { 
            background-color: #5D5E64; 
            border-color: #5D5E64;
            transform: translateY(-1px);
        }
        .filterable-badge { cursor: pointer; transition: all 0.2s ease;
 }
        .filterable-badge:hover { transform: translateY(-2px);
 }
        .filterable-badge.selected { border: 2px solid var(--fg-primary); transform: scale(1.08) translateY(-2px); box-shadow: 0 2px 8px rgba(var(--shadow-color-rgb), 0.12); }
        .patterns-column li.active-filter { background-color: var(--accent-bg-subtle); border-radius: var(--radius-inline);
 }
        .patterns-column li:not(.active-filter):hover { background-color: var(--bg-secondary); border-radius: var(--radius-inline);
 }
        .patterns-column li { cursor: pointer;
 }
        .badge-container { display: flex; flex-wrap: wrap; gap: var(--sp-2) var(--sp-3);
 }
        .entity-type-badge { display: inline-block; color: var(--fg-on-accent); padding: calc(var(--sp-1) - 1px) var(--sp-2); border-radius: var(--radius-pill);
 font-size: 0.75rem; font-weight: 500; white-space: nowrap; }
        .badge-freq-high { background-color: var(--accent);
 }
        .badge-freq-medium { background-color: var(--accent-secondary);
 }
        .badge-freq-low { background-color: var(--accent-tertiary);
 }
        .legend-container { display: flex; flex-wrap: wrap; gap: var(--sp-4); margin-bottom: var(--sp-5); padding-bottom: var(--sp-5);
 border-bottom: 1px solid var(--border-primary); font-size: var(--fs-xs); align-items: center; }
        .legend-item { display: flex;
 align-items: center; gap: var(--sp-2); color: var(--fg-secondary); font-weight: 500; }
        .legend-color-box { width: 14px;
 height: 14px; border-radius: var(--radius-swatch); }
        .patterns-container { display: flex; gap: var(--sp-8); align-items: flex-start;
 }
        .patterns-column ol { margin: 0; padding-left: 0; list-style: none; font-size: var(--fs-sm);
 }
        .patterns-column li { margin-bottom: var(--sp-2); color: var(--fg-secondary); display: flex; justify-content: space-between;
 align-items: baseline; gap: var(--sp-4); padding: var(--sp-1) var(--sp-2); }
        .patterns-column li .rank { font-weight: 600;
 color: var(--fg-secondary); min-width: 1.5rem; text-align: right; margin-right: var(--sp-2); }
        .patterns-column li .pattern { font-family: var(--font-mono);
 color: var(--fg-primary); }
        .patterns-column li .count { font-weight: 600; background: var(--border-primary);
 padding: 1px 6px; border-radius: var(--radius-inline); font-size: var(--fs-xs); }
        .patterns-column .pattern-rel { color: var(--accent);
 font-weight: 500; }
        .toggle-button { display: block; width: 100%; margin-top: var(--sp-4); padding: var(--sp-2);
 font-family: var(--font-primary); font-size: var(--fs-sm); font-weight: 500; background: none; border: 1px solid var(--border-primary); border-radius: var(--radius-interactive); cursor: pointer; transition: all 0.2s ease;
 }
        .toggle-button:hover { background-color: var(--bg-secondary); border-color: var(--fg-secondary);
 }
        .speaker-turn { margin-bottom: var(--sp-6);
 }
        .turn-header { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: var(--sp-6); padding-bottom: var(--sp-4);
 border-bottom: 1px solid var(--border-primary); }
        .turn-speaker-name { font-size: var(--fs-xl); font-weight: 700;
 }
        .turn-meta { font-size: var(--fs-sm); color: var(--fg-secondary);
 }
        .extraction-card { background-color: var(--bg-primary); border: 1px solid var(--border-primary); border-radius: var(--radius-main); margin-bottom: var(--sp-6);
 padding: var(--sp-6); box-shadow: var(--shadow-sm); transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
 }
        hr.triple-divider { border: 0; border-top: 1px solid var(--border-primary); margin: var(--sp-4) 0; }
        .extraction-card:hover { transform: translateY(-3px); box-shadow: var(--shadow-md);
 }
        .sro-triple { display: flex; align-items: center; justify-content: space-between; gap: var(--sp-4); margin-bottom: var(--sp-6);
 }
        .entity-box { border: 1px solid var(--border-secondary); border-radius: var(--radius-main); padding: var(--sp-4) var(--sp-5);
 flex-grow: 1; flex-basis: 0; background-color: var(--bg-secondary); display: flex; justify-content: center; align-items: baseline; gap: var(--sp-2);
 }
        .entity-name { font-size: var(--fs-md); font-weight: 600;
 }
        .relation-link { display: flex; flex-direction: column; align-items: center; text-align: center; flex-shrink: 0;
 color: var(--fg-secondary); padding: 0 var(--sp-2); }
        .relation-semantic-form { font-size: var(--fs-xs); margin-bottom: var(--sp-1);
 }
        .relation-arrow { font-size: var(--fs-xl); font-weight: bold; color: var(--accent);
 }
        .relation-details { margin-bottom: var(--sp-6); font-size: var(--fs-sm); color: var(--fg-secondary);
 }
        .relation-details code { font-family: var(--font-mono); background: var(--bg-secondary); border: 1px solid var(--border-primary);
 color: var(--fg-primary); padding: 2px 5px; border-radius: var(--radius-inline); font-size: var(--fs-xs); }
        .evidence-section { border-top: 1px solid var(--border-primary);
 padding-top: var(--sp-6); }
        .evidence-text { border-left: 3px solid var(--accent); padding: var(--sp-1) var(--sp-5);
 margin: 0 0 var(--sp-4) 0; font-style: italic; color: var(--fg-secondary); }
        .evidence-sources { text-align: right;
 }
        .evidence-id-tag { display: inline-block; font-size: var(--fs-xs); font-style: normal; background-color: var(--bg-secondary); color: var(--fg-secondary);
 border: 1px solid var(--border-primary); padding: var(--sp-1) var(--sp-2); margin-left: var(--sp-2); border-radius: var(--radius-inline); transition: all 0.2s ease;
 }
        .evidence-id-tag:hover { background-color: var(--accent); border-color: var(--accent); color: var(--fg-on-accent); cursor: pointer;
 }
        .section-header-with-actions { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--sp-4);
 }
        .export-csv-btn { font-size: var(--fs-xs); font-weight: 500; color: var(--fg-secondary); background: var(--bg-primary);
 border: 1px solid var(--border-primary); border-radius: var(--radius-interactive); padding: var(--sp-1) var(--sp-3); cursor: pointer; transition: all 0.2s ease; display: inline-flex; align-items: center;
 gap: var(--sp-2); }
        .export-csv-btn:hover { background-color: var(--bg-secondary); border-color: var(--fg-secondary); color: var(--fg-primary);
 }
        .export-csv-btn svg { width: 14px; height: 14px; stroke: currentColor; stroke-width: 2;
 fill: none; }
        .export-options-list {
            display: flex;
            flex-direction: column;
            gap: var(--sp-2);
            font-size: var(--fs-sm);
            color: var(--fg-secondary);
        }
        .export-option {
            display: flex;
            align-items: center;
            gap: var(--sp-2);
        }
        .collapsible-header { display: flex; justify-content: space-between; align-items: center; cursor: pointer;
 }
        .collapsible-header h3 { margin-bottom: 0;
 }
        .collapsible-content { max-height: 1500px; overflow: hidden;
 transition: max-height 0.4s ease-in-out, margin-top 0.4s ease-in-out, opacity 0.3s ease-in-out; margin-top: var(--sp-5); opacity: 1;
 }
        .collapsible.collapsed .collapsible-content { max-height: 0; margin-top: 0; opacity: 0;
 }
        .chevron { border-color: var(--fg-secondary); border-style: solid; border-width: 0 2px 2px 0;
 display: inline-block; padding: 3px; transform: rotate(45deg); transition: transform 0.3s ease-in-out;
 }
        .collapsible.collapsed .chevron { transform: rotate(-135deg);
 }
        .filterable-relation { cursor: pointer; transition: all 0.2s ease; display: inline-block;
 }
        .filterable-relation:hover { background-color: var(--accent-bg-subtle);
 }
        .filterable-relation.selected { box-shadow: 0 0 0 2px var(--fg-primary), 0 0 0 4px var(--accent-bg-subtle);
 transform: scale(1.05); background-color: var(--bg-primary); }
        
        /* Network Visualization Modal */
        .network-modal {
            display: none;
            position: fixed;
            z-index: 10000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(4px);
        }
        .network-modal-content {
            position: relative;
            margin: 2% auto;
            width: 96%;
            height: 96%;
            background-color: var(--net-bg);
            border-radius: var(--radius-main);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        .network-modal-header {
            padding: var(--sp-4) var(--sp-6);
            border-bottom: 1px solid var(--border-primary);
            background-color: var(--bg-secondary);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-shrink: 0;
        }
        .network-modal-title {
            font-size: var(--fs-lg);
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: var(--sp-3);
        }
        .network-legend {
            display: flex;
            gap: var(--sp-4);
            align-items: center;
            font-size: var(--fs-xs);
        }
        .network-legend-item {
            display: flex;
            align-items: center;
            gap: var(--sp-1);
        }
        .network-legend-color {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 1px solid var(--border-secondary);
        }
        .network-controls {
            display: flex;
            gap: var(--sp-2);
            align-items: center;
        }
        .network-control-btn {
            background: var(--bg-primary);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-interactive);
            padding: var(--sp-1) var(--sp-3);
            font-size: var(--fs-xs);
            cursor: pointer;
            transition: all 0.2s ease;
            color: var(--fg-primary);
            font-family: var(--font-primary);
        }
        .network-control-btn:hover {
            background: var(--bg-secondary);
            border-color: var(--accent);
        }
        .network-control-btn.active {
            background: var(--accent);
            color: var(--fg-on-accent);
            border-color: var(--accent);
        }
        .network-search-input {
            padding: var(--sp-1) var(--sp-3);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-interactive);
            font-size: var(--fs-xs);
            font-family: var(--font-primary);
            width: 140px;
            transition: all 0.2s ease;
        }
        .network-search-input:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: var(--shadow-focus-ring);
        }
        .network-export-dropdown,
        .network-labels-dropdown,
        .network-hops-dropdown {
            position: relative;
            display: inline-block;
        }
        .export-menu,
        .labels-menu,
        .hops-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background: var(--bg-primary);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-interactive);
            box-shadow: var(--shadow-md);
            min-width: 120px;
            z-index: 1000;
        }
        .export-menu.show,
        .labels-menu.show,
        .hops-menu.show {
            display: block;
        }
        .export-menu button,
        .labels-menu button,
        .hops-menu button {
            display: block;
            width: 100%;
            padding: var(--sp-2) var(--sp-3);
            border: none;
            background: none;
            text-align: left;
            cursor: pointer;
            font-size: var(--fs-xs);
            font-family: 'PT Sans Narrow', sans-serif;
            transition: background-color 0.2s ease;
            position: relative;
        }
        .export-menu button:hover,
        .labels-menu button:hover,
        .hops-menu button:hover {
            background: var(--bg-secondary);
        }
        .export-menu button.active,
        .labels-menu button.active,
        .hops-menu button.active {
            background: var(--accent-bg-subtle);
            font-weight: 600;
        }
        .export-menu button.active::before,
        .labels-menu button.active::before,
        .hops-menu button.active::before {
            content: "✓";
            position: absolute;
            right: var(--sp-2);
            color: var(--accent);
            font-weight: bold;
        }
        .export-menu button:first-child,
        .labels-menu button:first-child,
        .hops-menu button:first-child {
            border-radius: var(--radius-interactive) var(--radius-interactive) 0 0;
        }
        .export-menu button:last-child,
        .labels-menu button:last-child,
        .hops-menu button:last-child {
            border-radius: 0 0 var(--radius-interactive) var(--radius-interactive);
        }
        .network-modal-close {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--fg-secondary);
            padding: var(--sp-2);
            border-radius: var(--radius-interactive);
            transition: all 0.2s ease;
            line-height: 1;
        }
        .network-modal-close:hover {
            background-color: var(--border-primary);
            color: var(--fg-primary);
        }
        .network-container {
            flex: 1;
            position: relative;
            background-color: var(--net-bg);
            min-height: 500px;
        }
        #network-graph {
            width: 100% !important;
            height: 100% !important;
            min-height: 500px !important;
        }
        .network-loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: var(--fg-secondary);
        }
        .loading-spinner {
            display: inline-block;
            width: 40px;
            height: 40px;
            border: 4px solid var(--border-primary);
            border-radius: 50%;
            border-top-color: var(--accent);
            animation: spin 1s ease-in-out infinite;
            margin-bottom: var(--sp-4);
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        .network-info {
            position: absolute;
            top: var(--sp-4);
            left: var(--sp-4);
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(8px);
            border-radius: var(--radius-interactive);
            padding: var(--sp-3) var(--sp-4);
            font-size: var(--fs-sm);
            font-weight: 600;
            box-shadow: var(--shadow-md);
            transition: all 0.2s ease;
            border: 1px solid var(--border-primary);
        }
        .network-tips {
            position: absolute;
            bottom: var(--sp-4);
            right: var(--sp-4);
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(8px);
            border-radius: var(--radius-interactive);
            padding: var(--sp-2) var(--sp-3);
            font-size: var(--fs-xs);
            color: var(--fg-secondary);
            max-width: 250px;
            line-height: 1.3;
            border: 1px solid var(--border-primary);
        }
        #back-to-top-btn:hover {
            background-color: #5D5E64;
            transform: translateY(-1px);
        }
        
        /* Fixed button container for top-right actions */
        .fixed-buttons-container {
            position: fixed;
            top: 12px;
            right: 80px;
            z-index: 1001;
            display: flex;
            gap: var(--sp-3);
            align-items: center;
        }
        
        .fixed-buttons-container #visualise-btn {
            position: static;
        }
        
        .fixed-buttons-container #back-to-top-btn {
            position: static;
        }
        @media (max-width: 768px) {
            .app-bar .text-search-input {
                max-width: 220px;
            }
            #visualise-btn {
                font-size: var(--fs-xs);
                padding: var(--sp-1) var(--sp-3);
            }
            .fixed-buttons-container {
                right: 1rem;
            }
            .network-modal-content {
                margin: 1% auto;
                width: 98%;
                height: 98%;
            }
        }
    </style>
</head>
<body>
    <header class="app-bar">
        <div class="app-bar-content">
            <h1 class="app-bar-title">{{ report_title }}</h1>
            <input type="search" id="entity-search-input" placeholder="Search entities, types, relations, evidence..." class="text-search-input">
            <!-- Buttons moved to fixed container outside app-bar -->
        </div>
        <div class="app-bar-content app-bar-filters">
            <div id="filter-status" class="filter-status-inline">
                <div>
                    <div id="filter-status-content">
                        <div id="search-filter-display" style="display: none;">
                            <h4>Searching for:</h4>
                            <span id="search-filter-text"></span>
                        </div>
                        <div id="type-filter-display" style="display: none;">
                            <h4>Filtering by Type(s):</h4>
                            <div class="badge-container" id="type-filter-tags"></div>
                        </div>
                        <div id="relation-filter-display" style="display: none;">
                            <h4>Filtering by Relation:</h4>
                            <div id="relation-filter-tags"></div>
                        </div>
                        <div id="pattern-filter-display" style="display: none;">
                            <h4>Filtering by Pattern:</h4>
                            <span id="pattern-filter-text"></span>
                        </div>
                    </div>
                    <button id="clear-all-filters-btn">Clear All</button>
                </div>
            </div>
        </div>
    </header>

    <!-- Fixed positioned buttons container -->
    <div class="fixed-buttons-container">
        <button id="visualise-btn" title="Visualize Network Graph">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"/>
                <circle cx="12" cy="5" r="3"/>
                <circle cx="12" cy="19" r="3"/>
                <circle cx="5" cy="12" r="3"/>
                <circle cx="19" cy="12" r="3"/>
                <line x1="12" y1="9" x2="12" y2="15"/>
                <line x1="9" y1="12" x2="15" y2="12"/>
            </svg>
            Visualise
        </button>
        <button id="back-to-top-btn" title="Back to Top">Back to Top</button>
    </div>

    <div class="container">
        <main class="two-column-layout">
            <div class="main-content-column">
                <div class="global-summary-card">
                    <div class="stat-item">
                        <div class="value">{{ global_stats.total_extractions }}</div>
                        <div class="label">Total Extractions</div>
                    </div>
                    <div class="stat-item">
                        <div class="value">{{ global_stats.total_speaker_turns }}</div>
                        <div class="label">Speaker Turns</div>
                    </div>
                    <div class="stat-item">
                        <div class="value">{{ global_stats.unique_entity_names }}</div>
                        <div class="label">Unique Entities</div>
                    </div>
                    <div class="stat-item">
                        <div class="value">{{ global_stats.unique_entity_types }}</div>
                        <div class="label">Unique Entity Types</div>
                    </div>
                    <div class="stat-item">
                        <div class="value">{{ global_stats.unique_relations }}</div>
                        <div class="label">Unique Relations</div>
                    </div>
                </div>
                {% for turn in speaker_turns %}
                <div class="speaker-turn"
                     data-speaker-name="{{ turn.speaker_name }}"
                     data-utterance-order="{{ turn.utterance_order }}">
                    <div class="turn-header">
                        <span class="turn-speaker-name">{{ turn.speaker_name }}</span>
                        <span class="turn-meta">{{ turn.role }} | Utterance #{{ turn.utterance_order }} | {{ turn.extraction_count }} Extractions</span>
                    </div>

                    {# Group extractions by evidence (same sentence) #}
                    {% for group in turn.extractions | groupby('evidence_text') %}
                    {% set group_list = group.list %}
                    {% set first = group_list[0] %}

                    {# Build aggregated data attributes for filtering across all triples in the card #}
                    {% set subj_types_join = group_list | map(attribute='subject_entity') | map(attribute='entity_type') | join('|') %}
                    {% set obj_types_join = group_list | map(attribute='object_entity') | map(attribute='entity_type') | join('|') %}
                    {% set rel_forms_join = group_list | map(attribute='relation') | map(attribute='semantic_form') | join('|') %}
                    {% set rel_surfaces_join = group_list | map(attribute='relation') | map(attribute='surface_form') | join('|') %}
                    {% set subj_names_join = group_list | map(attribute='subject_entity') | map(attribute='name') | map('lower') | join('|') %}
                    {% set obj_names_join = group_list | map(attribute='object_entity') | map(attribute='name') | map('lower') | join('|') %}
                    {% set patterns_join = '' %}
                    {% for ex in group_list %}
                        {% set patterns_join = patterns_join + (patterns_join and '|' or '') + (ex.subject_entity.entity_type ~ '::' ~ ex.relation.semantic_form ~ '::' ~ ex.object_entity.entity_type) %}
                    {% endfor %}
                    {% set evidence_sources_join = '' %}
                    {% if first.evidence_sources %}
                        {% set evidence_sources_join = first.evidence_sources | join('|') %}
                    {% endif %}

                    <div class="extraction-card"
                         data-subject-types="{{ subj_types_join }}"
                         data-subject-names="{{ subj_names_join }}"
                         data-relation-forms="{{ rel_forms_join }}"
                         data-relation-surfaces="{{ rel_surfaces_join }}"
                         data-object-types="{{ obj_types_join }}"
                         data-object-names="{{ obj_names_join }}"
                         data-patterns="{{ patterns_join }}"
                         data-evidence-text="{{ group.grouper }}"
                         data-evidence-sources="{{ evidence_sources_join }}">

                        {# Render each triple within the group, separated by a divider #}
                        {% for extraction in group_list %}
                        <div class="sro-triple">
                            <div class="entity-box subject">
                                <span class="entity-name">{{ extraction.subject_entity.name }}</span>
                                {% set subj_utt_count = entity_utterance_counts_map.get(extraction.subject_entity.entity_type, 0) %}
                                <span class="entity-type-badge {% if subj_utt_count > 3 %}badge-freq-high{% elif subj_utt_count >= 2 %}badge-freq-medium{% else %}badge-freq-low{% endif %}">
                                    {{ extraction.subject_entity.entity_type }}
                                </span>
                            </div>
                            <div class="relation-link"><span class="relation-semantic-form">{{ extraction.relation.semantic_form }}</span><span class="relation-arrow">&rarr;</span></div>
                            <div class="entity-box object">
                                <span class="entity-name">{{ extraction.object_entity.name }}</span>
                                {% set obj_utt_count = entity_utterance_counts_map.get(extraction.object_entity.entity_type, 0) %}
                                <span class="entity-type-badge {% if obj_utt_count > 3 %}badge-freq-high{% elif obj_utt_count >= 2 %}badge-freq-medium{% else %}badge-freq-low{% endif %}">
                                    {{ extraction.object_entity.entity_type }}
                                </span>
                            </div>
                        </div>
                        <div class="relation-details">Surface Form: <code>"{{ extraction.relation.surface_form }}"</code></div>
                        {% if not loop.last %}<hr class="triple-divider">{% endif %}
                        {% endfor %}

                        <div class="evidence-section">
                            <h3>Evidence Source</h3>
                            <blockquote class="evidence-text">{{ group.grouper }}</blockquote>
                            <div class="evidence-sources">{% for source_id in first.evidence_sources %}<span class="evidence-id-tag">{{ source_id }}</span>{% endfor %}</div>
                        </div>
                    </div>
                    {% else %}
                    <div class="extraction-card" style="text-align: center; color: var(--fg-secondary);"><p>No extractions found for this utterance.</p></div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="extraction-card" style="text-align: center; color: var(--fg-secondary);"><p>No speaker turns found in the provided data.</p></div>
                {% endfor %}
            </div>

            <aside class="sidebar-column" id="sidebar">
                <div class="sidebar-panel" id="export-panel">
                    <div class="section-header-with-actions">
                        <h2>Export</h2>
                    </div>
                    <div class="export-options-list">
                        <label class="export-option">
                            <input type="checkbox" id="export-option-entities" checked>
                            <span>Entity Types CSV</span>
                        </label>
                        <label class="export-option">
                            <input type="checkbox" id="export-option-patterns" checked>
                            <span>Pattern Analytics (Export All)</span>
                        </label>
                        <label class="export-option">
                            <input type="checkbox" id="export-option-triples">
                            <span>Filtered Triples (JSON)</span>
                        </label>
                    </div>
                    <button id="export-selected-btn" class="export-csv-btn" title="Export selected data" style="margin-top: var(--sp-4);">
                        <svg viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                        Export Selected
                    </button>
                </div>
                <div class="sidebar-panel" id="filter-and-search-panel">
                    <h2>Entity Types</h2>
                    
                    {% if all_entity_types %}
                    <div>
                        <div class="section-header-with-actions">
                            <h3>Entity Types (Click to Filter)</h3>
                        </div>
                        <div class="legend-container">
                            <div class="legend-item"><div class="legend-color-box" style="background-color: var(--accent);"></div><span>&gt; 3 Utterances</span></div>
                            <div class="legend-item"><div class="legend-color-box" style="background-color: var(--accent-secondary);"></div><span>2-3 Utterances</span></div>
                            <div class="legend-item"><div class="legend-color-box" style="background-color: var(--accent-tertiary);"></div><span>1 Utterance</span></div>
                        </div>
                        <div id="entity-type-filter-container">
                            {% if entity_types_high_freq %}
                            <div class="entity-type-section">
                                <h4>More than 3 Utterances ({{ entity_types_high_freq|length }})</h4>
                                <div class="badge-container">
                                    {% for type_info in entity_types_high_freq %}
                                    <span class="entity-type-badge filterable-badge badge-freq-high"
                                          data-entity-type="{{ type_info.name }}"
                                          data-total-count="{{ type_info.count }}"
                                          data-utterance-count="{{ type_info.utterance_count }}">
                                          {{ type_info.name }} [{{ type_info.count }}]
                                    </span>
                                    {% endfor %}
                                </div>
                                <button class="toggle-button entity-group-toggle" style="display: none;">Show More</button>
                            </div>
                            {% endif %}

                            {% if entity_types_medium_freq %}
                            <div class="entity-type-section">
                                <h4>2-3 Utterances ({{ entity_types_medium_freq|length }})</h4>
                                <div class="badge-container">
                                    {% for type_info in entity_types_medium_freq %}
                                    <span class="entity-type-badge filterable-badge badge-freq-medium"
                                          data-entity-type="{{ type_info.name }}"
                                          data-total-count="{{ type_info.count }}"
                                          data-utterance-count="{{ type_info.utterance_count }}">
                                          {{ type_info.name }} [{{ type_info.count }}]
                                    </span>
                                    {% endfor %}
                                </div>
                                <button class="toggle-button entity-group-toggle" style="display: none;">Show More</button>
                            </div>
                            {% endif %}

                            {% if entity_types_low_freq %}
                            <div class="entity-type-section">
                                <h4>1 Utterance ({{ entity_types_low_freq|length }})</h4>
                                <div class="badge-container">
                                    {% for type_info in entity_types_low_freq %}
                                    <span class="entity-type-badge filterable-badge badge-freq-low"
                                          data-entity-type="{{ type_info.name }}"
                                          data-total-count="{{ type_info.count }}"
                                          data-utterance-count="{{ type_info.utterance_count }}">
                                          {{ type_info.name }} [{{ type_info.count }}]
                                    </span>
                                    {% endfor %}
                                </div>
                                <button class="toggle-button entity-group-toggle" style="display: none;">Show More</button>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                </div>

                <div id="analytics-panel">
                    <div class="section-header-with-actions">
                        <h2>Pattern Analytics</h2>
                    </div>
                    <div class="summary-section collapsible collapsed">
                        <div class="collapsible-header">
                            <h3>Entity Type Patterns</h3>
                            <span class="chevron"></span>
                        </div>
                        <div class="collapsible-content">
                            <h4>Multi-Typed Entities ({{ multi_typed_entities|length }} found)</h4>
                            <ul class="stats-list">
                                {% for name, types in multi_typed_entities.items() %}
                                <li>
                                    <span>{{ name }}</span> 
                                    <div class="badge-container">
                                        {% for type in types %}
                                            {% set utt_count = entity_utterance_counts_map.get(type, 0) %}
                                            <span class="entity-type-badge {% if utt_count > 3 %}badge-freq-high{% elif utt_count >= 2 %}badge-freq-medium{% else %}badge-freq-low{% endif %}">{{ type }}</span>
                                        {% endfor %}
                                    </div>
                                </li>
                                {% else %}<li class="empty-state" style="justify-content: flex-start;">None found.</li>{% endfor %}
                            </ul>
                            <h4>Subject-Only Entity Types ({{ subject_only_types|length }} types)</h4>
                            <div class="badge-container">
                                {% for type in subject_only_types %}{% set utt_count = entity_utterance_counts_map.get(type, 0) %}{% set total_count = entity_total_counts_map.get(type, 0) %}<span class="entity-type-badge filterable-badge {% if utt_count > 3 %}badge-freq-high{% elif utt_count >= 2 %}badge-freq-medium{% else %}badge-freq-low{% endif %}" data-entity-type="{{ type }}" data-total-count="{{ total_count }}" data-utterance-count="{{ utt_count }}">{{ type }} [{{ total_count }}]</span>{% else %}<span class="empty-state">None found.</span>{% endfor %}
                            </div>
                            <h4>Object-Only Entity Types ({{ object_only_types|length }} types)</h4>
                            <div class="badge-container">
                                {% for type in object_only_types %}{% set utt_count = entity_utterance_counts_map.get(type, 0) %}{% set total_count = entity_total_counts_map.get(type, 0) %}<span class="entity-type-badge filterable-badge {% if utt_count > 3 %}badge-freq-high{% elif utt_count >= 2 %}badge-freq-medium{% else %}badge-freq-low{% endif %}" data-entity-type="{{ type }}" data-total-count="{{ total_count }}" data-utterance-count="{{ utt_count }}">{{ type }} [{{ total_count }}]</span>{% else %}<span class="empty-state">None found.</span>{% endfor %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="summary-section collapsible collapsed">
                        <div class="collapsible-header">
                            <h3>Relation Cardinality Patterns</h3>
                            <span class="chevron"></span>
                        </div>
                        <div class="collapsible-content">
                            <h4>One-to-One (by Type)</h4>
                            <ul class="stats-list">
                                {% for rel, patterns in one_to_one_relations_sorted %}
                                <li>
                                    <code class="pattern-rel filterable-relation" data-relation-form="{{ rel }}">{{ rel }}</code>
                                    <span>{{ relation_frequency_map.get(rel, 0) }} occurrence(s) • {{ patterns|length }} pattern(s){% if patterns %}, e.g., ({{ patterns[0][0] }}){% endif %}</span>
                                </li>
                                {% else %}
                                <li class="empty-state">No self-relations (e.g., PERSON &rarr; PERSON) found.</li>
                                {% endfor %}
                            </ul>
                            <h4>One-to-Many Relations</h4>
                            <ul class="stats-list">
                                {% for rel in one_to_many_relations_sorted %}
                                <li>
                                    <code class="pattern-rel filterable-relation" data-relation-form="{{ rel }}">{{ rel }}</code>
                                    <span>{{ relation_frequency_map.get(rel, 0) }} occurrence(s) (1:N Cardinality)</span>
                                </li>
                                {% else %}
                                <li class="empty-state" style="justify-content: flex-start;">None found.</li>
                                {% endfor %}
                            </ul>
                            <h4>Many-to-One Relations</h4>
                            <ul class="stats-list">
                                {% for rel in many_to_one_relations_sorted %}
                                <li>
                                    <code class="pattern-rel filterable-relation" data-relation-form="{{ rel }}">{{ rel }}</code>
                                    <span>{{ relation_frequency_map.get(rel, 0) }} occurrence(s) (N:1 Cardinality)</span>
                                </li>
                                {% else %}
                                <li class="empty-state" style="justify-content: flex-start;">None found.</li>
                                {% endfor %}
                            </ul>
