        const highDegreeNodes = sortedNodes.filter(node => this.getNodeDegree(node.id) > averageDegree * 2);
        
        if (highDegreeNodes.length > 4) {
            // Group high-degree nodes into clusters of 4-6
            const clusterSize = 5;
